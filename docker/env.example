# Docker环境变量配置示例
# 复制此文件为 .env 并根据需要修改

# MySQL配置
MYSQL_ROOT_PASSWORD=12345678
MYSQL_DATABASE=email_mgr
MYSQL_USER=ruoyi
MYSQL_PASSWORD=ruoyi123

# Redis配置
REDIS_PASSWORD=

# 应用配置
SPRING_PROFILES_ACTIVE=docker
RUOYI_PROFILE=/home/ruoyi/uploadPath

# 端口配置
MYSQL_PORT=3306
REDIS_PORT=6379
BACKEND_PORT=28080
FRONTEND_PORT=80
PROXY_PORT=8080

# 数据卷配置
MYSQL_DATA_VOLUME=mysql_data
REDIS_DATA_VOLUME=redis_data
UPLOAD_DATA_VOLUME=upload_data

# 网络配置
NETWORK_SUBNET=172.20.0.0/16

# JVM配置
JAVA_OPTS=-Xms512m -Xmx1024m -Djava.security.egd=file:/dev/./urandom

# 镜像标签
BACKEND_IMAGE_TAG=latest
FRONTEND_IMAGE_TAG=latest
MYSQL_IMAGE_TAG=8.0
REDIS_IMAGE_TAG=7-alpine
NGINX_IMAGE_TAG=alpine


